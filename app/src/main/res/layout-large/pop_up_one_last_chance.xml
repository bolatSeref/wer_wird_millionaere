<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    >

    <ImageView
        android:id="@+id/imageView19"
        android:layout_width="327dp"
        android:layout_height="234dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_popup_timeup" />

    <TextView
        android:id="@+id/tvTimeUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bold"
        android:text="@string/one_last_chance"
        android:textColor="#000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/imageView19" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/regular"
        android:text="@string/use_20_gems_or_watch_a_short_video_to_save_your_position_and_try_another_option"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/textView41" />

    <ImageView
        android:id="@+id/imgCloseOneMoreJoker"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginEnd="21dp"
        android:onClick="closeTimeUpPopUp"
        app:layout_constraintBottom_toBottomOf="@+id/tvTimeUp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toTopOf="@+id/tvTimeUp"
        app:srcCompat="@drawable/ic_close" />

    <ImageView
        android:id="@+id/imgShowRewardOneMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:srcCompat="@drawable/btn_video" />

    <TextView
        android:id="@+id/textView44"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="@string/video"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgShowRewardOneMore"
        app:layout_constraintEnd_toEndOf="@+id/imgShowRewardOneMore"
        app:layout_constraintStart_toStartOf="@+id/imgShowRewardOneMore"
        app:layout_constraintTop_toTopOf="@+id/imgShowRewardOneMore" />

    <TextView
        android:id="@+id/textView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/bold"
        android:text="@string/oh_no_your_answer_is_wrong"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView19"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/tvTimeUp" />

    <ImageView
        android:id="@+id/imgGemsOneMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@+id/imageView19"
        app:layout_constraintTop_toBottomOf="@+id/textView42"
        app:srcCompat="@drawable/btn_gems" />

    <TextView
        android:id="@+id/textView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="@string/gems"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgGemsOneMore"
        app:layout_constraintEnd_toEndOf="@+id/imgGemsOneMore"
        app:layout_constraintStart_toStartOf="@+id/imgGemsOneMore"
        app:layout_constraintTop_toTopOf="@+id/imgGemsOneMore" />

</androidx.constraintlayout.widget.ConstraintLayout>