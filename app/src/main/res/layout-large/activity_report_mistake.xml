<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_game"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context=".user_inputs.ReportMistakeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout5"
        android:layout_width="307dp"
        android:layout_height="458dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/bg_popup_send_question"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgReportMistakeClose"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:onClick="cancelClick"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_close" />

        <TextView
            android:id="@+id/textView77"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:fontFamily="@font/regular"
            android:text="@string/we_will_inform_as_soon_as_possible"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etReportFromUser"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/input1_send_question"
            android:ems="10"
            android:fontFamily="@font/medium"
            android:gravity="start|top"
            android:hint="@string/type_your_message"
            android:inputType="textMultiLine"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView77" />

        <ProgressBar
            android:id="@+id/progressBarReport"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etReportFromUser" />

        <ImageView
            android:id="@+id/imgDiscardReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="70dp"
            android:onClick="cancelClick"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etReportFromUser"
            app:srcCompat="@drawable/btn_discard_send_question" />

        <TextView
            android:id="@+id/textView51"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="@string/discard"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgDiscardReport"
            app:layout_constraintEnd_toEndOf="@+id/imgDiscardReport"
            app:layout_constraintStart_toStartOf="@+id/imgDiscardReport"
            app:layout_constraintTop_toTopOf="@+id/imgDiscardReport" />

        <ImageView
            android:id="@+id/imgSaveReport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:onClick="sendReport"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgDiscardReport"
            app:srcCompat="@drawable/btn_send_question" />

        <TextView
            android:id="@+id/textView52"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:text="@string/send"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imgSaveReport"
            app:layout_constraintEnd_toEndOf="@+id/imgSaveReport"
            app:layout_constraintStart_toStartOf="@+id/imgSaveReport"
            app:layout_constraintTop_toTopOf="@+id/imgSaveReport" />

        <EditText
            android:id="@+id/etReportMistakeUserEmail"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/input2_send_question"
            android:ems="10"
            android:fontFamily="@font/bold"
            android:hint="@string/type_your_email"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etReportFromUser" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.google.android.gms.ads.AdView
        android:id="@+id/adViewReportMistake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_test_id"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
